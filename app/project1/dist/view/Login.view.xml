<mvc:View
    controllerName="project1.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="loginPage"
        title="Welcome to Leave Portal"
        class="loginPage"
        showHeader="false"
    >
        <content>
            <VBox
                id="loginBox"
                class="loginBox"
                alignItems="Center"
                justifyContent="Center"
                width="100%"
            >
                <Text
                    id="_IDGenText24"
                    text="ðŸ‘¤"
                    class="bigIcon"
                />

                <Title
                    id="_IDGenTitle5"
                    text="Leave Request Portal"
                    level="H1"
                    class="sapUiMediumMarginBottom"
                />

                <Text
                    id="_IDGenText25"
                    text="Welcome back! Please log in to continue."
                    class="sapUiSmallMarginBottom"
                />

                <HBox id="_IDGenHBox2"
                    alignItems="Center"
                    class="sapUiSmallMarginTop"
                    justifyContent="Start"
                >
                    <core:Icon id="_IDGenIcon2"
                        src="sap-icon://person-placeholder"
                        size="1.5rem"
                        color="#0a6ed1"
                        class="sapUiTinyMarginEnd"
                    />
                    <Input
                        id="usernameInput"
                        placeholder="Enter Username"
                        width="260px"
                    />
                </HBox>

                <HBox id="_IDGenHBox3"
                    alignItems="Center"
                    class="sapUiSmallMarginTop"
                    justifyContent="Start"
                >
                    <core:Icon id="_IDGenIcon3"
                        src="sap-icon://key"
                        size="1.5rem"
                        color="#0a6ed1"
                        class="sapUiTinyMarginEnd"
                    />
                    <Input
                        id="passwordInput"
                        placeholder="Enter Password"
                        type="Password"
                        width="260px"
                    />
                </HBox>

                <Button
                    id="loginBtn"
                    text="ðŸ”“ Login"
                    type="Emphasized"
