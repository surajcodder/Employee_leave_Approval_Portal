<mvc:View
    controllerName="project1.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page id="loginPage" showHeader="false" class="loginPage">
        <content>
            <VBox alignItems="Center" justifyContent="Center" width="100%" height="100%">
                
                <!-- Login Card -->
                <VBox class="loginCard" alignItems="Center" justifyContent="Center">
                    <Text text="ðŸ‘¤" class="bigIcon" />

                    <Title text="Leave Request Portal" level="H1" class="titleText" />

                    <Text text="Welcome back! Please log in to continue." class="subtitleText" />

                    <!-- Username -->
                    <HBox alignItems="Center" class="inputRow">
                        <core:Icon src="sap-icon://person-placeholder" size="1.3rem" color="#555" />
                        <Input id="usernameInput" placeholder="Enter Username" width="100%" />
                    </HBox>

                    <!-- Password -->
                    <HBox alignItems="Center" class="inputRow">
                        <core:Icon src="sap-icon://key" size="1.3rem" color="#555" />
                        <Input id="passwordInput" placeholder="Enter Password" type="Password" width="100%" />
                    </HBox>

                    <!-- Login Button -->
                   <Button
    icon="sap-icon://visits"
    type="Emphasized"
    press="onLogin"
    class="loginIconButton"
/>


                    <Text text="Â© 2025 Your Company" class="footerText" />
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
